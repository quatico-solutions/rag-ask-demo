# =============================================================================
# Server Configuration
# =============================================================================
PORT=8787

# =============================================================================
# LM Studio Configuration
# =============================================================================

# Use LM Studio for completions
AI_COMPLETION_PROVIDER=lmstudio

# Use OpenAI for embeddings (LM Studio doesn't handle embeddings well)
AI_EMBEDDING_PROVIDER=openai

# LM Studio API endpoint
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# LM Studio model - MUST match exactly what's loaded in LM Studio
# Run "node test-lmstudio.js" to see available models
AI_COMPLETION_MODEL=mistral-7b-instruct

# OpenAI for embeddings
AI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_API_KEY=your-openai-api-key-here